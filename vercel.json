{
  "buildCommand": "npm install && npm run build",
  "outputDirectory": "dist",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "vite",
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://backend-holy-shadow-7671.fly.dev/api/:path*"
    },
    {
      "source": "/:shortCode([a-zA-Z0-9]{4,8})",
      "destination": "https://backend-holy-shadow-7671.fly.dev/redirect?shortCode=:shortCode"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}